.hotel{
    position: relative;
    width: 100%;
}
.hotel .header{
    border-top: 20rpx solid #F3F7F9;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #999;
    padding: 20rpx 40rpx;
    position: absolute;
    left: 0;
    background: #fff;
    right: 0;
    top: 0;
    z-index: 998;
}
.header .item image{
    width: 32rpx;
    height: 18rpx;
    margin-left: 10rpx;
}
.hotel .list{
    /* padding-top: 90rpx; */
    position: relative;
    /* top: 90rpx; */
    z-index: 9;
}

.list .list-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 20rpx 40rpx;
}

.list-item image{
    width: 250rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.list-item .item-info{
    flex: 1;
    margin-left: 20rpx;
}
.item-info .title{
    font-size: 28rpx;
}
.item-info .collect{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}