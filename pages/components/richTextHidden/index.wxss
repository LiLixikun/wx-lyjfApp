/* pages/components/richTextHidden/index.wxss */

.richTextHidden {
  position: relative;
}

.richTextHidden .content {
  height: 180rpx;
  overflow: hidden;
  display: block;
  letter-spacing: 2px;
}

.richTextHidden .hiddenRich-button {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.richTextHidden .hiddenRich-shadow {
  position: absolute;
  top: 0;
  z-index: 999;
  height: 190rpx;
  width: 100%;
  background: #fff;
  background: -webkit-linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
  background: -moz-linear-gradient(top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
  /*FireFox*/
  background: -o-linear-gradient(top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
  /* Opear */
  background: -ms-linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
  /*IE10ÂèäIE10+*/
}

.richText {
  position: relative;
}

.richText .hiddenRich-button {
  display: none;
}

.richText .hiddenRich-shadow {
  display: none;
}

.richText image{
  display: none;
}